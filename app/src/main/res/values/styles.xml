<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">5pt</item>
        <item name="android:background">#70ff106d</item>
        <item name="android:shadowColor">#70ff106d</item>
    </style>

    <style name="BlueButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_normal_blue</item>
    </style>

    <style name="BrownButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_normal_brown</item>
    </style>

    <style name="LightBlueButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_normal_lblue</item>
    </style>

    <style name="GreenButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_normal_green</item>
    </style>

    <style name="PinkButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_normal_pink</item>
    </style>

    <style name="RedButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_normal_red</item>
    </style>

    <style name="YellowButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_normal_yellow</item>
    </style>

    <style name="OrangeButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_selected</item>
    </style>

    <style name="AquaMarineButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/aquamarine</item>
    </style>

    <style name="PinkishBrown" parent="android:Widget.Button">
        <item name="android:background">@drawable/pinkish_brown</item>
    </style>
</resources>
